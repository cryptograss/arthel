{% extends 'shared/layouts/base.njk' %}
{% set hide_social_nav = true %}
{% set no_nav = true %}
{% set custom_slogan = "somewhere between ginseng sullivan and byzantine fault tolerance" %}

{% block title %}Justin Holmes Music{% endblock %}

{% block main %}
<script>
// Prevent slogan from being overwritten by JS
window.skipSloganUpdate = true;
</script>
{% include 'partials/bigger-banner.njk' %}
<div class="container">

    <div class="plaque-grid-container">
        <div class="plaque-grid">
            <!-- Row 1 -->
            <div class="plaque-card">
                <div class="artwork-container">
                    <img src="/assets/images/albums/vowel-sounds-cover-art-400.png" alt="Vowel Sounds Album Art"
                        class="card-artwork">
                </div>
                <div class="qr-container">
                    <img src="{{ get_image('qr-codes/vowel-sounds-bandcamp.png') }}" alt="Vowel Sounds QR Code"
                        class="qr-code">
                </div>
                <div class="card-content">
                    <h3 class="card-title">Our second record: <br />Vowel Sounds</h3>
                    <p class="card-subtitle">Album on Bandcamp</p>
                </div>
            </div>

            <div class="plaque-card">
                <div class="artwork-container">
                    <img src="/assets/images/albums/four-masks-temp.png" alt="Four Masks Album" class="card-artwork">
                </div>
                <div class="qr-container">
                    <img src="{{ get_image('qr-codes/four-masks-bandcamp.png') }}" alt="Four Masks QR Code"
                        class="qr-code">
                </div>
                <div class="card-content">
                    <h3 class="card-title">Our second record: <br />4Masks</h3>
                    <p class="card-subtitle">Album on Bandcamp</p>
                </div>
            </div>

            <!-- Row 2 -->
            <div class="plaque-card">
                <div class="artwork-container">
                    <img src="/assets/images/jh-logo-shaded.png" alt="Justin Holmes Logo" class="card-artwork">
                </div>
                <div class="qr-container">
                    <img src="{{ get_image('qr-codes/justinholmes-website.png') }}" alt="Website QR Code"
                        class="qr-code">
                </div>
                <div class="card-content">
                    <h3 class="card-title">Website</h3>
                    <p class="card-subtitle">justinholmes.com</p>
                </div>
            </div>

            <div class="plaque-card">
                <div class="artwork-container">
                    <img src="/assets/images/bike-with-instruments.png" alt="Cryptograss Merch" class="card-artwork">
                </div>
                <div class="qr-container">
                    <img src="{{ get_image('qr-codes/cryptograss-merch.png') }}" alt="Cryptograss Merch QR Code"
                        class="qr-code">
                </div>
                <div class="card-content">
                    <h3 class="card-title">Cryptograss Merch</h3>
                    <p class="card-subtitle">Digital Collectibles</p>
                </div>
            </div>

            <!-- Row 3 -->
            <div class="plaque-card">
                <div class="artwork-container">
                    <img src="/assets/images/social-logos/Octocat.png" alt="GitHub" class="card-artwork">
                </div>
                <div class="qr-container">
                    <img src="{{ get_image('qr-codes/github-source.png') }}" alt="GitHub QR Code" class="qr-code">
                </div>
                <div class="card-content">
                    <h3 class="card-title">GitHub</h3>
                    <p class="card-subtitle">Source Code</p>
                </div>
            </div>

            <div class="plaque-card">
                <div class="artwork-container">
                    <img src="/assets/images/IMG_0484.jpg" alt="Shows" class="card-artwork">
                </div>
                <div class="qr-container">
                    <img src="{{ get_image('qr-codes/justinholmes-shows.png') }}" alt="Shows QR Code" class="qr-code">
                </div>
                <div class="card-content">
                    <h3 class="card-title">Our past shows, setlists, performers, and metadata</h3>
                    <p class="card-subtitle">Live Performances</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="plaque-description">
                    <div class="payment-section">
                        <div class="payment-left">
                            <img src="{{ get_image('qr-codes/bitcoin-address.png') }}" alt="Bitcoin Address QR Code"
                                class="wallet-image">
                            <p class="payment-label">Bitcoin address</p>
                        </div>
                        <div class="payment-center">
                            <p class="payment-methods">We accept Bitcoin, ETH, silver, gold backs</p>
                            <p class="fiat-fee">Fiat is subject to a 15% bullshit fee</p>
                        </div>
                        <div class="payment-right">
                            <img src="{{ get_image('qr-codes/cryptograss-eth.png') }}" alt="cryptograss.eth QR Code"
                                class="cryptograss-qr">
                            <p class="payment-label">cryptograss.eth</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    .payment-section {
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 800px;
        margin: 0 auto;
        gap: .5rem;
    }

    .payment-left,
    .payment-right {
        flex: 0 0 auto;
        text-align: center;
    }

    .payment-center {
        flex: 1;
        text-align: center;
    }

    .wallet-image {
        height: 100px;
        width: 100px;
        object-fit: cover;
        border-radius: 8px;
        border: 2px solid #99c9ff;
        margin-bottom: 0.5rem;
    }

    .cryptograss-qr {
        border: 3px solid white;
        border-radius: 8px;
        background: white;
        padding: 4px;
        margin-bottom: 0.5rem;
    }

    .payment-label {
        font-family: 'Cabin', sans-serif;
        font-size: 0.9rem;
        color: #99c9ff;
        margin: 0;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
    }

    .payment-methods {
        font-family: 'Cabin', sans-serif;
        font-weight: bold;
        color: #99c9ff;
        margin-bottom: 0.5rem;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
    }

    .fiat-fee {
        font-family: 'Cabin', sans-serif;
        color: #ffb06b;
        font-style: italic;
        margin: 0;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
    }

    .plaque-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(3, 1fr);
        gap: 2rem;
        min-height: 600px;
    }

    .plaque-card {
        background: rgba(64, 70, 84, 0.9);
        border: 2px solid #99c9ff;
        border-radius: 12px;
        padding: .5rem;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }

    .artwork-container {
        margin-bottom: 1rem;
    }

    .card-artwork {
        width: 100px;
        height: 100px;
        border: 2px solid #99c9ff;
        border-radius: 8px;
        object-fit: cover;
        background: rgba(255, 255, 255, 0.1);
        padding: 2px;
    }

    .qr-container {
        margin-bottom: .5rem;
    }

    .qr-code {
        width: 70px;
        height: 70px;
        border: 3px solid white;
        border-radius: 8px;
        background: white;
        padding: 3px;
    }

    .card-content {
        color: white;
    }

    .card-title {
        font-family: 'Cabin', sans-serif;
        font-size: .5rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
    }

    .card-subtitle {
        font-size: 0.3rem;
        color: #99c9ff;
        margin: 0;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
    }

    /* Print styles for physical plaque */
    @media print {
        @page {
            size: letter;
            margin: 0;
        }

        /* Force backgrounds to print */
        body, * {
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
        }
        
        /* Hide the footer social links and video background */
        #footer,
        .bg,
        video {
            display: none !important;
        }
        
        /* Fix grid geometry for print */
        .plaque-grid-container {
            max-width: 7.5in !important;
            margin: 0 auto !important;
            padding: 0.25rem !important;
        }
        
        .plaque-grid {
            display: grid !important;
            grid-template-columns: repeat(2, 1fr) !important;
            grid-template-rows: repeat(3, 1fr) !important;
            gap: 0.5rem !important;
            min-height: auto !important;
            max-height: 9in !important;
        }
        
        .plaque-card {
            max-width: 3.5in !important;
            height: 2.2in !important;
            padding: 0.3rem !important;
            page-break-inside: avoid !important;
            overflow: hidden !important;
        }
        
        .qr-code {
            width: 75px !important;
            height: 75px !important;
        }
        
        .card-artwork {
            width: 70px !important;
            height: 70px !important;
        }
        
        .card-title {
            font-size: 0.85rem !important;
            line-height: 1.1 !important;
            margin-bottom: 0.2rem !important;
            overflow: hidden !important;
        }
        
        .card-subtitle {
            font-size: 0.7rem !important;
            line-height: 1 !important;
            margin: 0 !important;
        }
        
        /* Remove hover effects for print */
        .plaque-card:hover {
            transform: none !important;
            box-shadow: none !important;
        }
    }
</style>
{% endblock %}