<div id="content" class="container">
    <div class="row">
        <div class="col-2"></div>
        <h3 class="pixel-font col-6 center">Set Stone {{show.show_id}}-{{set.set_number}}-{{setstone.tokenId}}</h3>

        {# TODO: This line assumes all setstones are on arbitrum. #}
    </div>
    <div class="row mt-3">
        <div class="col-2"></div>
        <div class="col-2 stone-data">
            <img class="img-fluid" src="{{getCryptograssUrl()}}/assets/images/setstones/{{setstone.tokenId}}.png">
        </div>
        <div class="col-6 stone-data">
            <p>Show: {{show.title}}</p>
            <p>{{show.local_date`}}</p>
            <p>Set #: {{set.set_number}}</p>
            <p>Owner: {{setstone.owner}}</p>
            <p>Colors: {{colors}}</p>
        </div>
    </div>
</div>