pipeline {
    agent any
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        parallelsAlwaysFailFast();
    }

    environment {
        NODE_VERSION = '23.6.1'
        NVM_DIR = '/var/jenkins_home/.nvm'
        SECRETS_DIR = '/var/jenkins_home/secrets'
        PR_BUILDS_DIR = '/var/jenkins_home/www/builds'
        COMMIT_SHA = sh(script: 'git rev-parse HEAD', returnStdout: true).trim()
    }
    
    stages {
        stage('Setup Environment') {
            steps {
                sh '''
                    # Install NVM if not present
                    if [ ! -d "$NVM_DIR" ]; then
                        curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.0/install.sh | bash
                        export NVM_DIR="$NVM_DIR"
                        [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                    fi
                    
                    # Copy .env file from secrets
                    cp ${SECRETS_DIR}/0/.env .env
                    chmod 600 .env
                '''
            }
        }
        
        stage('Setup NodeJS ${NODE_VERSION}') {
            steps {
                sh '''
                    export NVM_DIR="$NVM_DIR"
                    [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                    nvm install ${NODE_VERSION}
                    nvm use ${NODE_VERSION}
                '''
            }
        }
        
        stage('Install Dependencies') {
            steps {
                // Only install if node_modules doesn't exist or package.json changed
                sh '''
                    if [ ! -d "node_modules" ] || [ package.json -nt node_modules ]; then
                        export NVM_DIR="$NVM_DIR"
                        [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                        nvm use ${NODE_VERSION}
                        npm install
                    fi
                '''
            }
        }

        stage('Tests and Fetches') {
            parallel {
                stage('Run Tests') {
                    steps {
                        sh '''
                    export NVM_DIR="$NVM_DIR"
                    [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                    nvm use ${NODE_VERSION}
                    npm test
                '''
                    }
                }

                stage("Fetch Chain Data") {
                    steps {
                        sh '''
                            export NVM_DIR="$NVM_DIR"
                            [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                            nvm use ${NODE_VERSION}
                            npm run fetch-chain-data
                        '''
                    }
                }
                
                stage('Fetch Blue Railroads Metadata') {
                    steps {
                        sh '''
                            export NVM_DIR="$NVM_DIR"
                            [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                            nvm use ${NODE_VERSION}
                            npm run fetch-video-metadata
                        '''
                    }
                }

            }
        }

            stage('Download Blue Railroad Videos') {
                steps {
                    sh '''
                        export NVM_DIR="$NVM_DIR"
                        [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                        nvm use ${NODE_VERSION}
                        npm run download-videos
                    '''
                }
            }

        stage("Build") {

            parallel {
                    
                stage('Build cryptograss.live') {
                    steps {
                        sh '''
                            export NVM_DIR="$NVM_DIR"
                            export SITE=cryptograss.live
                            [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                            nvm use ${NODE_VERSION}
                            npm run build
                        '''
                    }
                }

                stage('Build justinholmes.com') {
                    steps {
                        sh '''
                            export NVM_DIR="$NVM_DIR"
                            export SITE=justinholmes.com
                            [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                            nvm use ${NODE_VERSION}
                            npm run build
                        '''
                    }
                }
            }
        }
    
        stage('Deploy') {
            steps {
                script {
                    // Add debug logging
                    echo "CHANGE_ID: ${env.CHANGE_ID}"
                    
                    // Check if this is a PR build
                    def isPR = env.CHANGE_ID != null
                    echo "isPR: ${isPR}"
                    
                    if (isPR) {
                        // Create beta banner content
                        def betaBanner = """
                            <div style='background-color: #ff6b6b; color: white; padding: 1em; text-align: center; position: fixed; top: 0; left: 0; right: 0; z-index: 9999;'>
                                ⚠️ BETA VERSION - Commit ${COMMIT_SHA} ⚠️<br>
                                See: <a href='${env.CHANGE_URL}'>Pull Request #${env.CHANGE_ID}, requesting merge of ${env.CHANGE_BRANCH} from ${env.CHANGE_FORK}</a><br>
                                This is a preview build. Use at your own risk. Features may be incomplete or unstable.
                            </div>
                        """
                        
                        // Deploy to PR builds directory with correct asset paths
                        sh """
                            # Create commit-specific directory
                            mkdir -p ${PR_BUILDS_DIR}/${COMMIT_SHA}
                            
                            # Deploy sites with asset path corrections
                            rsync -av output/justinholmes.com.dist/ ${PR_BUILDS_DIR}/${COMMIT_SHA}/justinholmes.com/
                            rsync -av output/cryptograss.live.dist/ ${PR_BUILDS_DIR}/${COMMIT_SHA}/cryptograss.live/
                            
                            # Update asset paths in HTML files
                            find ${PR_BUILDS_DIR}/${COMMIT_SHA} -type f -name "*.html" -exec sed -i 's|/assets/|./assets/|g' {} +
                            
                            # Inject beta banner into all HTML files
                            find ${PR_BUILDS_DIR}/${COMMIT_SHA} -type f -name "*.html" -exec sed -i "s|<body>|<body>${betaBanner}|" {} +
                            
                            # Add a simple index page
                            echo '<html><body>
                                <h1>PR Build for ${COMMIT_SHA}</h1>
                                <p>⚠️ BETA VERSION - Use at your own risk ⚠️</p>
                                <ul>
                                    <li><a href='justinholmes.com/'>justinholmes.com</a></li>
                                    <li><a href='cryptograss.live/'>cryptograss.live</a></li>
                                </ul>
                                </body></html>' > ${PR_BUILDS_DIR}/${COMMIT_SHA}/index.html
                        """
                    }
                }
            }
        }
    }
    
}